<div class="container">
    {% for image in images %}
        <div class="row row-cols-3 mb-3">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ image.title }}</h5>
                        <p class="card-text">
                            <img src="/images/{{ image.path }}" class="img-thumbnail"  alt="" />
                            {{ image.creationDate | date('d/m/Y') }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
